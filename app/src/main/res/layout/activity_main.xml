<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#A9B388"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Meow PetShop"
        android:background="#5F6F52"
        android:textStyle="italic"
        android:textSize="30sp"
        android:gravity="center"
        android:padding="10dp"
        android:textColor="@color/black"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:text="Isi terlebih dahulu!"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold|italic" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow android:paddingTop="10sp">

            <TableLayout>
                <TableRow>
                    <TextView
                        android:id="@+id/tvMeo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:baselineAligned="false"
                        android:layout_weight="1"
                        android:text="me-o Rp26.000"
                        android:textStyle="bold"
                        android:textSize="23dp"
                        android:inputType="number" />
                </TableRow>
                <TableRow>
                    <EditText
                        android:id="@+id/etMeo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="0"
                        android:inputType="number"
                        />
                </TableRow>
            </TableLayout>

            <ImageView
                android:layout_width="20px"
                android:layout_height="200px"
                android:layout_weight="1"
                android:src="@drawable/meo" />
        </TableRow>

        <TableRow android:paddingTop="10sp">

            <TableLayout>
                <TableRow>
                    <TextView
                        android:id="@+id/tvWishkas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:baselineAligned="false"
                        android:layout_weight="1"
                        android:text="Wishkas Rp40.000"
                        android:textSize="23dp"
                        android:textStyle="bold"
                        android:inputType="number" />
                </TableRow>
                <TableRow>
                    <EditText
                        android:id="@+id/etWishkas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:hint="0"
                        android:inputType="number"
                        />
                </TableRow>
            </TableLayout>

            <ImageView
                android:layout_width="20px"
                android:layout_height="250px"
                android:layout_weight="1"
                android:src="@drawable/wishkas" />
        </TableRow>

        <TableRow android:paddingTop="10sp">

            <TableLayout>
                <TableRow>
                    <TextView
                        android:id="@+id/tvRoyalCanin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:baselineAligned="false"
                        android:layout_weight="1"
                        android:text="Royal Canin Rp50.000"
                        android:textSize="23dp"
                        android:textStyle="bold"
                        android:inputType="number" />
                </TableRow>
                <TableRow>
                    <EditText
                        android:id="@+id/etRoyalCanin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:gravity="center"
                        android:hint="0"
                        />
                </TableRow>
            </TableLayout>

            <ImageView
                android:layout_width="20px"
                android:layout_height="250px"
                android:layout_weight="1"
                android:src="@drawable/royalcanin" />
        </TableRow>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Membership : "
            android:textSize="17sp"
            android:textStyle="bold" />

        <RadioGroup
            android:orientation="horizontal"
            android:paddingBottom="15sp"
            android:layout_height="50dp"
            >

            <RadioButton
                android:id="@+id/yesMember"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#A5DD9B"
                android:text="Yes" />

            <RadioButton
                android:id="@+id/noMember"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#C5EBAA"
                android:text="No" />
        </RadioGroup>

    </TableLayout>


    <Button
        android:id="@+id/btnProses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proses"
        android:textSize="15dp"
        android:background="#F3CB51"
        />

    <TextView
        android:layout_marginTop="12dp"
        android:id="@+id/tvNota"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="#78A083"
        />

</LinearLayout>